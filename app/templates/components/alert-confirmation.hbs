{{#if visible}}
  <div class="alert alert-{{bsClass}}">
    <div class="row d-flex align-items-center h100">
      <div class="col-1">
        {{fa-icon "question-circle" size="3"}}
      </div>
      <div class="col-8">
        {{{yield}}}
      </div>
      <div class="col">
        <div class="float-right">
          <button class="btn btn-success confirm-submit" {{action "submitConfirm"}}>Oui</button>
          <button class="btn btn-danger confirm-cancel" {{action "cancelConfirm"}}>Annuler</button>
        </div>
      </div>
    </div>
  </div>
{{/if}}